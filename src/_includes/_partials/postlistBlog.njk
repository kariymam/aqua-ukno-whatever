<a href="{{ post.url }}" class="h-full w-full">
  {% block blogLink %}
  <article class="flex flex-col group relative h-full w-full transition-all border-2 border-transparent">
    <div class="flex flex-col px-4 pt-4">
      <span class="flex flex-row flex-wrap gap-1 items-center justify-end">
        <time
              datetime="{{ post.date | htmlDateString }}"
              class="text-sm"
              >{{ post.date | readableDate }}</time
            >
      </span>
      <h3 class="postlist-item-header break-words px-4 pt-4">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</h3>
    </div>
    <div class="relative w-full h-full">
      <div
        class="postlist-item-description h-full transition-all"
      >
      <div class="mx-8 pb-12 lg:pb-0 max-w-sm">
        {% excerpt post %}</div
        >
      {% if post.data.thumb %}
      <div
        class="thumbImgContainer relative border-t-2 lg:flex items-end justify-end w-full lg:h-full top-0 lg:absolute lg:overflow-hidden lg:z-10"
      >
        {% image post.data.thumb, post.data.thumbAlt, "thumbImg h-full lg:absolute lg:object-cover lg:inset-0 lg:top-0" %}
      </div>
      {% endif %}
      </div>
    </div>
  </article>
  {% endblock %}
</a>