---
layout: base.njk
date: Last Modified
---
<style>
  :root {
  --bg-img: url('{{ thumb }}');
  }
</style>
  <article id="main" class="mx-auto w-auto flex flex-col lg:flex-row md:flex-row sm:px-6 lg:px-12 md:items-start lg:justify-center md:justify-start">
    <div class="intro w-full lg:max-w-sm sm:max-w-lg">
      {% include "_partials/header.njk" %}
      <h1 class="text-xl mb-1 py-5 mr-20">{{ title }}</h1>
      <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
      <h2 class="text-base mr-20">{{ description }}</h2>
    </div>
  <div class="w-full">
    {%- if collections.posts %}
    {%- set previousPost = collections.posts | getPreviousCollectionItem %}
    {%- set nextPost = collections.posts | getNextCollectionItem %}
    {%- if nextPost or previousPost %}
    <div class="flex flex-row mb-1 py-5 border-b-2">
                {%- if previousPost %}
                <div class="w-full text-start">&#8592; Previous: <a href="{{ previousPost.url }}" aria-describedby="Previous post">{{ previousPost.data.title }}</a></div>
                    {% endif %}
    </div>
    <div class="grid grid-row-2 row-auto gap-1 break-inside-avoid w-full">
      {% if thumb %}
      <div class="relative">
      <div class="flex relative overflow-hidden">
        <div class="relative w-full">
          <div class="bg-image h-full" style="background-image: var(--bg-img);background-size: contain;">
          <img src="{{ thumb }}" alt="{{ thumbAlt }}"
            class="inset-0 z-10 absolute object-cover overflow-hidden block top-0 bottom-0 right-0 box-border m-0 h-full">
            <div class="overflow-hidden w-full h-full"></div>
          </div>
        </div>
      </div>
      </div>
      {% endif %}
      <div class="max-w-screen-lg w-full textblock mx-auto mb-1 py-5 mr-20 text-base">
        <div class="mr-64">
          {{ content | safe }}
        </div>
      </div>
      </div>
      <div class="flex flex-row mb-1 py-5 border-b-2">
        {%- if nextPost %}
        <div class="w-full text-end">Next: <a href="{{ nextPost.url }}" aria-describedby="Next post">{{ nextPost.data.title }}</a> &#8594;</div>
                  {% endif %}
      </div>
      {%- endif %}
      {%- endif %}
    </div>
  </article>