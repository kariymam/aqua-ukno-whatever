---
title: Work
layout: home.njk
eleventyNavigation:
  key: work
  order: 1
---
{% set portfolio = collections.work %}
{% for work in portfolio %}
<div class="flex flex-col md:flex-row w-full">
  <div class="w-full max-w-lg mb-1 p-6 md:px-9 border-t-2">
    <h1>
      {% if work.data.penUrl %}
      <a href="{{ work.data.penUrl }}" target="_blank">{{ work.data.title }}</a></h1>
      {% else %}
      <a href="{{ work.url }}">{{ work.data.title }}</a></h1>
      {% endif %}
    <h2>{{ work.data.description }}</h2>
    {% if work.data.audience %}
    <ul>
      <li><time>{{ work.data.dates }}</time></li>
      <li>{{ work.data.audience }}</li>
      <li>{{ work.data.formats }}</li>
    </ul>
    {% endif %}
  </div>
  <div class="w-full">
    {% if work.data.thumb %}
    <div
    class="thumbImgContainer w-full h-full flex flex-col items-end self-center relative border-t-2 md:h-[calc(100vh_-_12rem)]"
    >
    {% if work.data.penUrl %}
    <div class="w-full h-full work-overlay z-10 opacity-60 transition-all">
      <a
        href="{{ work.data.penUrl }}"
        target="_blank"
        class="flex w-full h-full items-center justify-center text-4xl">
        <ion-icon name="link-outline" class="rotate-45"></ion-icon>
         Link to Codepen
        </a>
    </div>
    {% endif %}
    <figure>
      {% image work.data.thumb, work.data.thumbAlt, "thumbImg h-full md:w-full md:absolute object-cover inset-0 top-0" %}
    </figure>
  </div>
  {% endif %}
  </div>
</div>
{% endfor %}