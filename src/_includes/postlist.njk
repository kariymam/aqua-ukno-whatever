
  <div
    reversed
    class="postlist grid max-w-screen-lg break-inside-avoid w-full border-l-2 border-t-2"
    style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}"
  >
    {% for post in postslist | reverse %}
    <div
      class="postlist-item{% if post.url == url %} postlist-item-active{% endif %} h-full w-full border-r-2 border-b-2"
    >
      <div
        class="flex flex-col relative justify-end h-full w-full min-h-fit"
      >
        <a
          href="{{ post.url }}"
          class="h-full w-full"
        >
          <article class="flex flex-col group relative h-full w-full transition-all border-2 border-transparent">
            <div class="flex flex-col px-4 pt-4">
              <span class="flex flex-row flex-wrap gap-1 items-center justify-end">
                <time
                      datetime="{{ post.date | htmlDateString }}"
                      class="text-sm"
                      >{{ post.date | readableDate }}</time
                    >
              </span>
              <h3 class="postlist-item-header break-words p-4">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</h3>
            </div>
            <div class="opacity relative w-full h-full">
              <div
                class="postlist-item-description font-extralight h-full transition-all"
              >
              <div class="mx-8 pb-8 lg:pb-0 max-w-sm">
                {% excerpt post %}</div
                >
              {% if post.data.thumb %}
                <img
                    src="{{ post.data.thumb }}"
                    alt="{{ post.data.thumbAlt }}"
                    class="inset-0 top-0 relative lg:hidden"
                  />
              <div
                class="thumbImgContainer border-t-2 lg:flex items-end justify-end h-full w-full top-0 lg:absolute sm:relative lg:overflow-hidden lg:z-10"
              >
                <img
                  src="{{ post.data.thumb }}"
                  alt="{{ post.data.thumbAlt }}"
                  class="thumbImg lg:block lg:inset-0 lg:absolute lg:w-full transition-all lg:object-cover lg:object-top"
                />
              </div>
              {% endif %}
              </div>
            </div>
          </article>
        </a>
      </div>
      <ul class="page-tags-list absolute max-w-sm pt-8 pb-4 px-4 page-tags-list flex flex-row flex-wrap z-20 gap-2">
          {% for tag in post.data.tags | filterTagList %} {% set tagUrl %}/tags/{{
            tag | slug
          }}/{% endset %}
          <li class="page-tags-list-item">
            <a href="{{ tagUrl }}"
              class="post-tag px-2 py-1 rounded-3xl"
              >{{ tag }}</a
            >
          </li>
          {% endfor %}
      </ul>
    </div>
    {% endfor %}
  </div>