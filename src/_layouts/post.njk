---
layout: home.njk
date: Created
---
<article class="w-[calc(100%-3rem)] mx-auto -mt-0.5 flex flex-col items-center posttextBlock border-2 rounded-3xl hover:bg-[var(--color-gray-3)] transition-colors">
  <header class="flex flex-col md:flex-row w-full border-b-2">
    <div class="w-full max-w-lg mb-1 p-6">
      <h2 class="lg:text-2xl">{{ description }}</h2>
    </div>
    <div class="w-full">
      {% if thumb %}
      <div
      class="thumbImgContainer w-full flex items-end self-center relative h-[calc(100vh_-_12rem)] rounded-tr-3xl rounded-bl-3xl"
      >
      <figure>
        {% image thumb, thumbAlt, "thumbImg h-full w-full absolute object-cover inset-0 top-0 rounded-tr-3xl rounded-bl-3xl" %}
        <figcaption class="m-4 bg-black p-2 text-white">{{ thumbAlt }}</figcaption>
      </figure>
    </div>
    {% endif %}
  </div>
</header>
      {{ content | safe }}
</article>
<section class="textblock w-full">
  {%- if collections.posts %}
  {%- set previousPost = collections.posts | getPreviousCollectionItem %}
  {%- set nextPost = collections.posts | getNextCollectionItem %}
  {%- if nextPost or previousPost %}
  <div class="w-[calc(100%-3rem)] mx-auto p-6 -mt-0.5 border-2 rounded-3xl hover:bg-[var(--color-gray-3)] transition-colors">
    {%- if previousPost %}
            <div class="w-auto">Previous post: <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a></div>
                {% endif %}
    {%- if nextPost %}
    <div class="w-full lg:text-end">Next post: <a href="{{ nextPost.url }}">{{ nextPost.data.title }}<ion-icon name="arrow-forward-outline" class="align-middle"></ion-icon></a></div>
              {% endif %}
  </div>
  {%- endif %}
  {%- endif %}
</section>