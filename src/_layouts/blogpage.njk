---
layout: home.njk
---
{% set postsCount = collections.posts | length %}
{% set morePosts = postsCount - numberOfLatestPostsToShow %}
{% set latestPostsCount = postsCount | min(numberOfLatestPostsToShow) %}
{% set postsCount = collections.posts | length %}
<div class="w-full md:w-auto lg:w-auto lg:max-w-sm">
    <div class="intro lg:w-80 md:w-80">
      {% include "_partials/logo.njk" %}
      <div id="headerMobile" aria-hidden="true" class="flex md:hidden">
        {% include "_partials/headerMobile.njk" %}
      </div>
      {% if numberOfLatestPostsToShow%}
      <h1 class="pt-4 text-base max-w-xs w-auto mr-12">
        Latest {{ latestPostsCount }} Post{% if latestPostsCount != 1 %}s{% endif %}
        </h1>
        {% else %}
        <h1 class="pt-4 text-base max-w-xs w-auto mr-12">
          {{ title }}
          </h1>
      {% endif %}
      {%- if title == "Blog" %}
      <details>
      {% else %}
      <details open>
      {%- endif -%}
        <summary>
          Tags
        </summary>
        {% include "_partials/taglist.njk" %}
        <a href="/tags/">Taglist</a>
      </details>
    </div>
  </div>
  <div class="w-full">
    <div id="header" class="flex flex-row lg:top-0 lg:sticky z-20">
      {% include "_partials/header.njk" %}
    </div>
    {{ content | safe }}
    {% if morePosts > 0 %}
       <small>{{ morePosts }} more post{% if morePosts != 1 %}s{% endif %} can be found in <a href="/tags/">the archive</a>.</small>
    {% endif %}
  </div>