---
layout: home.njk
date: Created
eleventyNavigation:
  parent: blog
---
  <div class="w-full">
      <div aria-hidden="true" class="md:flex flex-row stone">
        {% include "_partials/header.njk" %}
      </div>
      <div class="flex flex-col">
        <div class="intro mb-1 p-6 md:px-9 border-t-2">
          <h1>{{ title }}</h1>
          <h2>{{ description }}</h2>
        </div>
        {% if thumb %}
          <div
            class="thumbImgContainer w-full flex items-end self-center relative border-t-2 h-[calc(100vh_-_12rem)]"
          >
            <figure>
              {% image thumb, thumbAlt, "thumbImg h-full w-full absolute object-cover inset-0 top-0" %}
              <figcaption class="m-4 bg-black p-2 text-white">{{ thumbAlt }}</figcaption>
            </figure>
          </div>
        {% endif %}
          <div class="w-full max-w-screen-sm mx-auto">
            <time datetime="{{ page.date | htmlDateString }}" class="text-sm">{{ page.date | readableDate }}</time>
            <ul class="flex gap-1 list-none">
              {%- for tag in tags | filterTagList %}
                {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
                <li><a href="{{ tagUrl }}" class="post-tag relative block px-2 rounded-full">{{ tag }}</a></li>
                {%- endfor %}
            </ul>
          </div>
        </div>
      <section class="textblock w-full">
        <div class="posttextBlock max-w-screen-sm mx-auto">
          {{ content | safe }}
        </div>
        {%- if collections.posts %}
        {%- set previousPost = collections.posts | getPreviousCollectionItem %}
        {%- set nextPost = collections.posts | getNextCollectionItem %}
        {%- if nextPost or previousPost %}
        <div class="mb-1 py-6 border-b-2 flex">
          {%- if previousPost %}
                  <div class="w-auto">Previous post: <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a></div>
                      {% endif %}
          {%- if nextPost %}
          <div class="w-full lg:text-end">Next post: <a href="{{ nextPost.url }}">{{ nextPost.data.title }} &#8594;</a></div>
                    {% endif %}
        </div>
        {%- endif %}
        {%- endif %}
      </section>
    </div>
  </div>