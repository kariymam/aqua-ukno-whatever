<header class="ml-auto">
  <div
    class="mx-auto flex h-16 items-center gap-8"
  >

    <div class="flex flex-1 items-center justify-end md:justify-between">
      <nav nav id="mainNav" role="navigation" aria-label="Global" class="hidden md:block">
        <h2 class="sr-only">Top level navigation menu</h2>
        <div class="flex items-center gap-2 text-sm h-8">
          {%- for entry in collections.all | eleventyNavigation %}
            <a id="{{ entry.title }}" aria-label="{{ entry.description }}" class="navLink z-10 px-4 list-interpunct text-base" href="{{ entry.url }}"{% if entry.url == page.url %} aria-current="page"{% endif %}>{{ entry.title }}</a>
          {%- endfor %}
        </div>
      </nav>

        <button
          class="block rounded bg-gray-100 p-2.5 text-gray-600 transition hover:text-gray-600/75 md:hidden"
        >
          <span class="sr-only">Toggle menu</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>
      </div>
    </div>
</header>